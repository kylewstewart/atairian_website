{
  "extends": "airbnb",
   "parser": "babel-eslint",
   "ecmaFeatures": {
     "classes": true
   },
   "rules": {
     "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
     "no-unused-expressions": ["error", { "allowTernary": true }],
     "global-require": "off",
     "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "hrefLeft", "hrefRight", "to" ],
            "aspects": [ "noHref", "invalidHref", "preferButton" ]
          }]
   },
   "globals": {
     "fetch": false,
     "dispatch": false,
     "document": false,
     "localStorage": false
   }
}
